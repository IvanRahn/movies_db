<div class="col m-2 ">
	<div class="card border border-primary rounded" style="width: 19rem;">
	<%= image_tag movie.img, class:"card-img-top img-fluid img-thumbnail", style:"height: 400px;" %>
	<div class="card-body d-flex flex-column align-items-center ">
	<h5 class="card-title"><%=movie.title%></h5>
		<ul class="list-group list-group-flush">
		<li class="list-group-item">Genre: <%= movie.genre %></li>
	<li class="list-group-item">Runtime: <%= movie.runtime %> min</li>	
	<li class="list-group-item">Release date: <%= movie.release_date%></li>	
	<% if overview%>
		<li class="list-group-item">Overview <%= movie.overview%></li>	
<%end%>

		</ul>
		<div class="container d-flex justify-content-around">
		<% if show%>
		<%= link_to 'Show', movie_path(movie), class: "btn btn-primary"%>
		<%end%>
		<%= link_to "Edit", edit_movie_path(movie), class: "btn btn-primary"%>
		<%= link_to "Delete", movie_path(movie), class:"btn btn-danger",
		method: :delete,
		data: { confirm: 'Are you sure?'}%>
		</div>
	</div>
</div>
</div>

