<h1>Movies</h1>

<div class="container-fluid row">
<%# <div class="row"> %>
<% @movies.each do |movie|%>
<div class="col m-2 ">
	<div class="card border border-primary rounded" style="width: 19rem;">
	<div class="card-body d-flex flex-column align-items-center ">
	<h5 class="card-title"><%=movie.title%></h5>
		<ul class="list-group list-group-flush">
		<li class="list-group-item">Genre: <%= movie.genre %></li>
	<li class="list-group-item">Runtime: <%= movie.runtime %> min</li>	
	<li class="list-group-item">Release date: <%= movie.release_date%></li>	
		</ul>
		<div class="container d-flex justify-content-around">
		<%= link_to "Edit", edit_movie_path(movie), class: "btn btn-primary"%>
		<button type="button" class="btn btn-danger"><%= link_to "Delete", movie_path(movie),
		method: :delete,
		data: { confirm: 'Are you sure?'}%></button>
		</div>
	</div>
</div>
</div>
<%end%>
</div>

<%=link_to "New Movie", new_movie_path %>
