<div class="container">	
<h1>New Movie</h1>

<%= form_with model: @movie, local: true do |movie| %>
<% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@movie.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
	<p>
	<%=movie.label :title%>
	<%=movie.text_field :title%>
	</p>
	<p>
	<%=movie.label :genre%>
	<%=movie.text_field :genre%>
	</p>
	<p>
	<%=movie.label :release_date%>
	<%=movie.text_field :release_date, type:'date'%>
	</p>
	<p>
	<%=movie.label :runtime%>
	<%=movie.text_field :runtime, type:'number'%>
	</p>
		<p>
	<%=movie.label :img%>
	<%=movie.text_field :img%>
	</p>
	<%=movie.submit%>	
<%end%>
</div>